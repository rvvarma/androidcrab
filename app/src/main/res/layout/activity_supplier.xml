<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context="com.apptecherzz.apcrabs.form"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="4dp"
            android:text="Supplier Information:"/>




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Company Name"
            android:textSize="15dp"
            android:id="@+id/et_company_name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="10"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Marks"
            android:textSize="15dp"
            android:id="@+id/marks"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Phone 1                   "
            android:textSize="15dp"
            android:id="@+id/phone_1"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Phone 2                    "
            android:textSize="15dp"
            android:id="@+id/phone_2"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Pan                           "
                android:textSize="15dp"
                android:id="@+id/pan"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter GST                            "
                android:textSize="15dp"
                android:id="@+id/gst"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                />
        </LinearLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cat"
            android:entries="@array/cate"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="Supplier Capacity in Crab Products :"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"

                android:textSize="8dp"
                android:layout_marginTop="20dp"
                android:text="Mud Crab – GL"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Turn Over PA"
                android:layout_marginLeft="25dp"
                android:textSize="13dp"
                android:id="@+id/et_fc_acres"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Trading from Years"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/et_fc_years"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Quantity Pw"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/et_fc_week"
                android:maxLines="1"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"

                android:textSize="8dp"
                android:layout_marginTop="20dp"
                android:text="Mud Crab – Waters"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Turn Over PA"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:id="@+id/et_md_acres"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Trading from Years"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/et_md_years"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Quantity PW"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/et_md_per_week"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"

                android:textSize="8dp"
                android:layout_marginTop="20dp"
                android:text="Red Crab – Live"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Turn Over PA"
                android:layout_marginLeft="25dp"
                android:textSize="13dp"
                android:id="@+id/et_sh_acres"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Trading from Years"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/et_sh_years"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Quantity PW"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/et_sh_week"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="Catching chain"
            android:layout_marginBottom="15dp"/>




            <LinearLayout
                android:id="@+id/linearLayoutForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>


        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Add"
            android:src="@android:drawable/ic_input_add" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="Sales Chain"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:id="@+id/linearLayoutForm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>


        <ImageButton
            android:id="@+id/btnAdd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Add"
            android:src="@android:drawable/ic_input_add" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="4dp"
            android:text="Payment Terms:"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay_terms"
            android:entries="@array/spinner_terms"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined">
        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="4dp"
            android:text="Payment Details:"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Bank Name"
            android:textSize="15dp"
            android:id="@+id/bank_name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Account No"
            android:textSize="15dp"
            android:id="@+id/account_name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter IFSC CODE"
            android:textSize="15dp"
            android:id="@+id/ifsc"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="4dp"
            android:text="Shipment Terms:"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shipment_type"
            android:entries="@array/shipment_type"

            style="@style/Base.Widget.AppCompat.Spinner.Underlined">
        </Spinner>



        <com.apptecherzz.apcrabs.MultiSelectionSpinner
            android:id="@+id/input1"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="Will provide Rate card"
            android:layout_marginBottom="12dp"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ratecard"
            android:entries="@array/Rate_card"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined">
        </Spinner>










        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/bt_submitform"
            android:text="NEXT"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/bt_submit2"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="20dp"/>





    </LinearLayout>



</ScrollView>